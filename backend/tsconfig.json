{
  "compilerOptions": {
    "target": "ES2023",
    "module": "Node16",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules/**/*", "./dist/**/*"]
}